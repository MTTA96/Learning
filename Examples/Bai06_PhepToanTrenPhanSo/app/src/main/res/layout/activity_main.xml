<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.greenacademy.bai06_pheptoantrenphanso.MainActivity">

    <TextView
        android:text="Phân số thứ nhất"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="18dp"
        android:id="@+id/textView"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Phân số thứ hai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etMau1"
        android:layout_alignLeft="@+id/etMau1"
        android:layout_alignStart="@+id/etMau1"
        android:layout_marginTop="27dp"
        android:id="@+id/textView4"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etTu1"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:hint="Nhập tử số thứ nhất" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etMau1"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/etTu1"
        android:layout_alignLeft="@+id/etTu1"
        android:layout_alignStart="@+id/etTu1"
        android:hint="Nhập mẫu số thứ nhất" />

    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnTru"
        android:layout_toRightOf="@+id/btnTru"
        android:layout_toEndOf="@+id/btnTru"
        android:id="@+id/btnNhan" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnTru"
        android:layout_alignBaseline="@+id/btnCong"
        android:layout_alignBottom="@+id/btnCong"
        android:layout_toRightOf="@+id/btnCong"
        android:layout_toEndOf="@+id/btnCong" />

    <TextView
        android:text="__"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvKetQua"
        android:textSize="18sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etTu2"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="11dp"
        android:hint="Nhập tử số thứ hai" />

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnChia"
        android:layout_alignBaseline="@+id/btnNhan"
        android:layout_alignBottom="@+id/btnNhan"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etMau2"
        android:layout_below="@+id/etTu2"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="14dp"
        android:hint="Nhập mẫu số thứ hai" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCong"
        android:layout_below="@+id/etMau2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

    <TextView
        android:text="Kết quả:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/btnCong"
        android:layout_alignLeft="@+id/etTu2"
        android:layout_alignStart="@+id/etTu2"
        android:textStyle="normal|bold"
        android:textSize="18sp" />
</RelativeLayout>
